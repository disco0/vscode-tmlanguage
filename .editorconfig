# http://editorconfig.org
root = true

# Grammar source, json         -> 2 spaces
# Typescript/Javascript Source -> 4 spacs

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# The JSON files contain newlines inconsistently
[*.json]
indent_size = 2
insert_final_newline = ignore

# Minified JavaScript files shouldn't be changed
[**.min.js]
indent_style = ignore
insert_final_newline = ignore

# Only target project sources
[*/*.ts]
indent_size = 2
indent_style = space

# XML tmLanguage grammars
[*.tmLangauge]
tab_width = 4

[*.{{JSON,YAML}-,{json,yaml}.}tmlanguage]
indent_size = 2
indent_style = space

[*.md]
trim_trailing_whitespace = false
