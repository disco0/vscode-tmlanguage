{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "out",
		"noImplicitAny": false,
		"lib" : [
			"es6"
		],
		"sourceMap": true,
        "rootDir": ".",
        "alwaysStrict": true,
        "isolatedModules": true
	},
    "typeAcquisition": {
        "enable": true
    },
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}